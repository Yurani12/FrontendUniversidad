.banner
    /*background url('https://images.pexels.com/photos/267885/pexels-photo-267885.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940') no-repeat 0px 0px*/
    background-image: url("../assets/images/main2.jpg")
    background-size cover
    min-height 40em
    h3
        color black
        font-size 30px
        letter-spacing 1px
        text-transform uppercase
        padding-top 15%
        font-weight 300
        text-align center
    h2
        color #fff
        font-size 50px
        letter-spacing 1px
        font-weight 700
        text-transform uppercase
        margin 30px 0px
        text-align center
        span
            color black
    p
        font-size 1em
        text-align center
        color black
        letter-spacing 2px
        line-height 1.8em
    h4
        color #fff
        font-size 3em
        line-height 1.8em
        border 2px solid #d51ed8
        width 20%
        margin 30px auto
        text-align center
        position relative
        text-transform capitalize
        span
            position absolute
            background #fff
            border 10px solid #d51ed8
            width 30%
            top 88%
            left 35%
        a
            color black

.Secion
    display flex

@media (max-width: 453px)
    .Secion
        display block
